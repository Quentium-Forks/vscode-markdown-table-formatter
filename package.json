{
    "name": "markdown-table-formatter",
    "displayName": "Markdown Table Formatter",
    "description": "Markdown Table Formatter",
    "version": "0.0.1",
    "publisher": "fcrespo82",
    "engines": {
        "vscode": "^0.10.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:markdown-table-formatter.format"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "markdown-table-formatter.format",
                "title": "Markdown Table Formatter: Format"
            }
        ],
        "keybindings": [{
			"command": "markdown-table-formatter.format",
			"key": "alt+shift+t",
			"mac": "alt+shift+t",
			"when": "editorTextFocus"
		}],
        "configuration": {
            "title": "Markdown Table Formatter configurations",
            "properties": {
                "markdown-table-formatter.padding": {
                    "title": "How many whitespaces between text and pipes",
                    "description": "How many whitespaces between text and pipes",
                    "default": 1,
                    "type": "number"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
    },
    "dependencies": {
        "wcwidth": "1.*",
        "gfm-table": "*",
        "utils-pad-string": "*"
    },
    "devDependencies": {
        "typescript": "^1.6.2",
        "vscode": "0.10.x"
    }
}